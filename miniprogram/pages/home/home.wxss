/* pages/home/home.wxss */
page {
  background: #f6f6f6;
  width: 100%;
  height: 100%;
  /* color: #fff; */
  font-size: 32rpx;
}

.home {
  width: 100%;
  height: 100%;
  position: relative;
}

.home_name {
  margin: 60rpx 40rpx 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #ddd;
}

.home_name text {
  display: block;
  margin-bottom: 40rpx;
}

.home_output,
.home_nodata {
  position: absolute;
  height: 50%;
  background: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  bottom: 0;
  width: 100%;
  padding-top: 40rpx;
  color: #000;
}

.home_output text {
  padding-left: 40rpx;
}

.home_output .home_view {
  position: absolute;
  width: 100%;
  height: 50%;
}

.home_output .home_img {
  position: absolute;
  width: 300rpx;
  height: 500rpx;
  overflow: hidden;
  left: 50%;
  top: 50%;
  margin-left: -180rpx;
  margin-top: -100rpx;
}

.home_output .home_img image {
  position: absolute;
  left: -20rpx;
  width: 1340rpx;
  height: 500rpx;
}

.home_nodata {
  text-align: center;
  line-height: 200rpx;
}

.home_nodata view {
  color: blue;
}