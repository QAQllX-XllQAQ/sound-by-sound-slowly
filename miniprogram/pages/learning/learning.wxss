/* learning.wxss */
page {
  background-color: #f8f8f8;
}

.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 输入区域样式 */
.input-container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.content-input {
  height: 100rpx;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.submit-btn {
  background-color: #3cc51f;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  height: 80rpx;
  line-height: 80rpx;
}

/* 结果展示区域样式 */
.result-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.language-type {
  padding: 10rpx 20rpx;
  background-color: #f0f9eb;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  color: #67c23a;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 简化模式标签 */
.simplified-mode-tag {
  background-color: #e6a23c;
  color: #fff;
  border-radius: 8rpx;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  margin-left: 15rpx;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #3cc51f;
}

.phonetics {
  font-size: 36rpx;
  color: #333;
  padding: 20rpx;
  line-height: 1.5;
  letter-spacing: 2rpx;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.ipa {
  font-family: "Times New Roman", serif;
  font-size: 34rpx;
  color: #0066cc;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

/* 声调分布样式 */
.tone-distribution {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.tone-bar-container {
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.tone-bar {
  height: 36rpx;
  border-radius: 6rpx;
  min-width: 30rpx;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  color: white;
  font-size: 22rpx;
  font-weight: bold;
  transition: width 0.5s;
}

.tone-1 {
  background-color: #409EFF; /* 第一声 - 蓝色 */
}

.tone-2 {
  background-color: #67C23A; /* 第二声 - 绿色 */
}

.tone-3 {
  background-color: #E6A23C; /* 第三声 - 橙色 */
}

.tone-4 {
  background-color: #F56C6C; /* 第四声 - 红色 */
}

.tone-5 {
  background-color: #909399; /* 轻声 - 灰色 */
}

.tone-label {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tone-value {
  margin-left: 15rpx;
  font-size: 24rpx;
  color: #666;
  width: 130rpx;
}

.tone-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: center;
}

.pronunciation-tips {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx;
  line-height: 1.6;
}

.tip-item {
  margin-bottom: 15rpx;
}

.lip-demo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.lip-image {
  width: 400rpx;
  height: 300rpx;
  margin-bottom: 20rpx;
  background-color: #ddd;
}

.tip {
  font-size: 24rpx;
  color: #999;
}

.action-btn {
  background-color: #1aad19;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 30rpx;
}

/* 录音区域样式 */
.record-overlay {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.record-container {
  width: 90%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.record-title {
  padding: 30rpx;
  background-color: #f5f5f5;
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.record-content {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.record-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
  padding: 0 40rpx;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.record-phonetics {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  width: 90%;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.record-timer {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.record-controls {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.record-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.record-btn-inner {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #e74c3c;
}

.record-btn.recording .record-btn-inner {
  width: 40rpx;
  height: 40rpx;
  border-radius: 5rpx;
  background-color: #e74c3c;
}

.record-label {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

.record-actions {
  padding: 20rpx;
  display: flex;
  justify-content: center;
  border-top: 1px solid #eee;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 300rpx;
} 